<%= title @timetable.route %>

<% @entries.group_by(&:vehicle).each do |vehicle,entries| %>
  <%= minititle Entry::vehicle(vehicle) %>
  <table id="<%= vehicle %>">
    <tr>
      <th><%= sortable 'departure' %></th>
      <th><%= sortable 'arrival' %></th>
    </tr>
    <% entries.each do |entry| %>
      <tr>
        <td><%= entry.departure_time %></td>
        <td><%= entry.arrival_time %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= link_to new(:entry), new_timetable_entry_path(@timetable) %>
